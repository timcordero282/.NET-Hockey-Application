@model Player
@{
    ViewBag.Title = "Delete Player";
}

<h2>Confirm Delete</h2>
<h3>@Model.PlayerName , @Model.PlayerID</h3>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="PlayerID" />

    <button type="submit" class="btn btn-primary">Delete </button>
    <a asp-controller="Player" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
