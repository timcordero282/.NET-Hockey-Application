@model Player
@{
    string title = ViewBag.Action + " Player";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="PlayerName">Player Name:</label>
        <input asp-for="PlayerName" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Position">Position:</label>
        <input asp-for="Position" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Country">Country: </label>
        <input asp-for="Country" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="DateOfBirth">Date Of Birth:</label>
        <input asp-for="DateOfBirth" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Goals">Goals:</label>
        <input asp-for="Goals" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Assists">Assists:</label>
        <input asp-for="Assists" class="form-control col-sm-8" />
    </div>
    <input type="hidden" asp-for="PlayerID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Player" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
