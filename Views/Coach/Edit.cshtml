@model Coach
@{
    string title = ViewBag.Action + " Coach";
    ViewBag.Title = title;
}
<h2>@ViewBag.Title</h2>
<form asp-action="Edit" method="post">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="CoachName">Coach Name:</label> 
        <input asp-for="CoachName" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="Country">Country:</label>
        <input asp-for="Country" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="DateOfBirth">Date Of Birth: </label>
        <input asp-for="DateOfBirth" class="form-control col-sm-8" />
    </div>
    <div class="form-group row">
        <label class="col-sm-2" asp-for="CareerWins">Career Wins:</label>
        <input asp-for="CareerWins" class="form-control col-sm-8" />
    </div>
    <input type="hidden" asp-for="CoachID" />
    <button type="submit" class="btn btn-primary">@ViewBag.Action</button>
    <a asp-controller="Coach" asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
